<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_20"
                android:textColor="@color/colorBlack"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorFontDark"
                android:text="动动手指 轻松赚钱"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <ImageView
            android:padding="@dimen/dp_10"
            android:src="@mipmap/center"
            android:id="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_msg"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tixian"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:background="@mipmap/money_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:text="当前余额（可提现）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_money"
                android:text="100"
                android:textColor="@color/colorBlueLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_describe"
                android:textColor="@color/colorFontDark"
                android:paddingTop="@dimen/dp_10"
                android:textSize="@dimen/sp_10"
                android:text="今日收益：0  累计收益：0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <TextView
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text="立即提现"
            android:background="@mipmap/tixian"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@mipmap/btn_yellow"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_5"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:text="快速任务"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
      android:id="@+id/ll_fast"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/red_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="快速任务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="试玩3分钟快速赚钱"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text="立即赚钱"
            android:background="@mipmap/btn_white"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@mipmap/btn_yellow"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_5"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:text="高级任务"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_adv"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/blue_bannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="高级任务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="周期较长，收益高"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text="立即赚钱"
            android:background="@mipmap/btn_white"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@mipmap/btn_yellow"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_5"/>
        <TextView
            android:paddingLeft="@dimen/dp_10"
            android:text="热门活动"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>